{
  "name": "mercadito-online-py",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "20.x"
  },
  "packageManager": "npm@10",
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint:hero": "eslint src/app/page.tsx src/components/hero src/app/api/hero-slides src/app/api/site-stats",
    "typecheck:hero": "tsc --noEmit src/app/page.tsx src/components/hero/HeroCarousel.tsx src/app/api/hero-slides/route.ts src/app/api/site-stats/route.ts",
    "db:push": "npx supabase db push",
    "typegen": "supabase gen types typescript --linked > src/types/supabase.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:unit": "vitest run",
    "verify:env": "node scripts/verificar-env-vars.js",
    "verify:migrations": "node scripts/comparar-migraciones.js",
    "compare:migrations": "node scripts/comparar-migraciones-produccion.js"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "vitest": {
    "environment": "jsdom",
    "setupFiles": [
      "./tests/setup.ts"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.15",
    "@react-email/render": "^1.4.0",
    "@sentry/nextjs": "^10.22.0",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/supabase-js": "^2.76.1",
    "browser-image-compression": "^2.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "csv-parser": "^3.2.0",
    "date-fns": "^4.1.0",
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "framer-motion": "^12.23.24",
    "json2csv": "^6.0.0-alpha.2",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.548.0",
    "next": "16.0.0",
    "nodemailer": "^7.0.10",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.65.0",
    "react-hot-toast": "^2.6.0",
    "react-leaflet": "^5.0.0",
    "recharts": "^3.3.0",
    "resend": "^6.3.0",
    "sharp": "^0.34.4",
    "socket.io-client": "^4.8.1",
    "stripe": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/leaflet": "^1.9.21",
    "@types/node": "^20",
    "@types/nodemailer": "^7.0.3",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "supabase": "^2.54.11",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.4"
  }
}
